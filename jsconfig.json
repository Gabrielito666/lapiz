{
  "compilerOptions":
  {
    "checkJs": true,
    "allowJs": true,
	"esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSuntethicDefaultImports": true,
    "target": "ES2020",

    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "paths" : {
    	"#lib/*" : ["./lib/*"]
    }
  },
  "include": ["**/*.js", "**/*.d.ts"]
}
